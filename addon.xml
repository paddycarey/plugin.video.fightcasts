<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
	id="plugin.video.fightcasts"
	name="FightCasts"
	version="0.0.3"
	provider-name="paddycarey"
    >
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="plugin.video.youtube" version="2.9.0"/>
    <import addon="plugin.video.vimeo"/>
    <import addon="plugin.video.mmafighting" version="0.0.2"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Browse and stream content from a variety of online MMA sources.</summary>
    <description lang="en">
        A Simple addon to aggregate and stream content from various combat sport related content sources.
    </description>
    <disclaimer lang="en">All content is copyright of their respective owners.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
